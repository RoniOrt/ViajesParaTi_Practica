{% extends 'base.html.twig' %}

{% block title %}Proveedores{% endblock %}

{% block body %}


<div class="menu-wrap">
  <img src="https://www.viajesparati.com/wp-content/uploads/2018/11/cropped-ViajesParaTi.png" alt="Logo">
  <button class="create-button"><code><a href="/create">Crear proveedor</a></code></button>
</div>


<h1>Gestión de proveedores</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Correo electrónico</th>
            <th>Teléfono</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Fecha creación</th>
            <th>Fecha edición</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
    {% for proveidor in proveidors %}
        <tr>
            <th scope="row">{{ proveidor.id }}</th>
            <td>{{ proveidor.nom }}</td>
            <td>{{ proveidor.email }}</td>
            <td>{{ proveidor.telefon }}</td>
            <td>{{ proveidor.tipus}}</td>
            <td>
                {% if proveidor.estat == '1' %}
                <span class="text-primary">Activo</span>
                {% endif %}
                {% if proveidor.estat == '0' %}
                <span class="text-danger">Inactivo</span>
                {% endif %}
            </td>
            <td>
                {{ proveidor.createat|date("d/m/Y") }}
            </td>
            <td>
                {{ proveidor.editedat|date("d/m/Y") }}
            </td>
            <!-- Editar/Eliminar-->
            <td>
                <a href="{{ path('edit', {'id':proveidor.id})}}" class="btn"> <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRSN-8HgIsi7jiEIF8cLzLIWg-RD1SL6qUu9A&usqp=CAU" alt="Editar" width="25" height="25"></a>
            </td> 
            <td>
                <a href="{{ path('delete', {'id':proveidor.id}) }}" class="btn"> <img src="data:image/jpeg;base64," alt="Eliminar" width="25" height="25"> </a>
            </td>                  
        </tr>
    {% endfor %}
    </tbody>
</table>


<style> /* ESTILS CSS*/

    body {
      font-family: 'Roboto', sans-serif;
    }

    /* Estils menú superior */
    .menu-wrap {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    /* Posició Imatge */
    .menu-wrap img {
        max-width: 100%;
        height: auto;
    }

    /* Botó Crear Proveedor */
    .create-button {
        background-color: #a80008;
        color: #ffffff;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        display: inline-block;
        box-shadow: 2px 2px 5px #888888; 
    }

    .create-button a {
        color: #FFFFFF;
        text-decoration: none;
        font-family: 'Roboto', sans-serif;
    }

    .create-button:hover {
    box-shadow: 5px 5px 8px #888888;
    }


    /* Estil h1*/
    h1 {
        text-align: center;
        margin: 20px 0;
        text-transform: uppercase;
        color:#292f35
    }

     /* Estils taula proveedors */
    table {
        width: 100%;
        margin-bottom: 2rem;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: #D19275;
        border-radius: 10px;
    }

    th, td {
        text-align: left;
        padding: 10px;
        padding-left: 25px; 
    }

    tr {
        border-bottom: 4px solid #FFFFFF;
    }

    .btn {
        display: inline-block;
        margin-left: 5px;
        border: none;
        border-radius: 10px;
        padding: 5px;
    }

    .btn:hover {
    box-shadow: 2px 2px 4px #B94D55;
    }


    /* MEDIA QUERIS */
    @media (max-width: 768px) {
    .menu-wrap {
        flex-direction: column;
    }

    .menu-wrap img {
        margin-bottom: 16px;
    }

    h1 {
        font-size: 24px;
    }

    table {
        font-size: 12px;
    }

    .btn {
        font-size: 12px;
    }

    @media (max-width: 576px) {
    .menu-wrap {
        flex-direction: column;
    }

    .menu-wrap img {
        margin-bottom: 8px;
    }

    h1 {
        font-size: 20px;
    }

    table {
        font-size: 10px;
    }

    .btn {
        font-size: 10px;
    }

     /* Agregamos algunos estilos adicionales para dispositivos móviles */
  
    body {
        font-size: 14px;
    }
    
    .menu {
        margin-top: 16px;
    }
    
    .menu li {
        padding: 8px;
    }

</style>


{% endblock %}
